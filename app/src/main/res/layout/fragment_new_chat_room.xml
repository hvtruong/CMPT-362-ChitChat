<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ui.newChatRoom.NewChatRoomFragment"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spinner_chatroom_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"/>

    <TextView
        android:id="@+id/add_friends_chatRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:drawablePadding="16dp"
        android:text="@string/add_friends"
        android:padding="12dp"
        app:drawableRightCompat="@android:drawable/arrow_down_float" />

    <Button
        android:id="@+id/button_new_chatroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>