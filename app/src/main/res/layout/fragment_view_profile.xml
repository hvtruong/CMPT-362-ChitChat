<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fragment_view_profile_image"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/fragment_view_profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder"
        android:textSize="28sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toTopOf="@id/fragment_view_profile_image"
        app:layout_constraintLeft_toRightOf="@id/fragment_view_profile_image"/>

    <TextView
        android:id="@+id/fragment_view_profile_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bio:"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_view_profile_image"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>